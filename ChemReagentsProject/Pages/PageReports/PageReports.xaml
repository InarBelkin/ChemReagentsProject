<UserControl x:Class="ChemReagentsProject.Pages.PageReports.PageReports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChemReagentsProject.Pages.PageReports"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" Width="8" Background="Black" ResizeBehavior="PreviousAndNext" />
        <DataGrid Grid.Column="2" ItemsSource="{Binding ReportList}">

        </DataGrid>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Начало" VerticalAlignment="Top" />
            <Calendar x:Name="calend"  SelectedDate="{Binding RepBeg}" VerticalAlignment="Top" Margin="0,40,0,0"  />
            <Button Height="30" Content="Сгенерировать отчёт" Command="{Binding GenerateCommand}"  VerticalAlignment="Top" Margin="10,220,10,0"/>



            <TextBlock Grid.Column="1" Text="Конец" VerticalAlignment="Top" />
            <Calendar Grid.Column="1"  x:Name="calend_end"  SelectedDate="{Binding RepEnd}" VerticalAlignment="Top" Margin="0,40,0,0"/>
            <Button Grid.Column="1"  Height="30" Content="Сохранить" Command="{Binding SaveCommand}" VerticalAlignment="Top"  Margin="10,220,10,0"/>
            <!--<StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                

                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Конец" />
                    <Calendar x:Name="calend_end"  SelectedDate="{Binding RepEnd}"  />
                    <Button Height="30" Content="Сохранить"/>
                </StackPanel>
            </StackPanel>-->
            
          

            
          
        </Grid>
       
    </Grid>
</UserControl>
